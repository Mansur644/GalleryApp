<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimens_8dp"
    android:layout_marginBottom="@dimen/dimens_5dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="@dimen/dimens_4dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_4dp"
        android:layout_marginLeft="@dimen/dimens_15dp"
        android:layout_marginRight="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_4dp"
        android:textColor="@color/color_black"
        android:textSize="22sp"
        android:fontFamily="sans-serif"/>
</android.support.v7.widget.CardView>